<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rv_history"
        android:padding="16dp"
        android:layout_margin="12dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="2dp"
            android:paddingTop="2dp"
            >
            <TextView
                android:id="@+id/tv_language_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                app1:layout_constraintStart_toStartOf="parent"
                app1:layout_constraintTop_toTopOf="parent"
                app1:layout_constraintBottom_toBottomOf="parent"
                app:text="en"
                />
            <TextView
                android:id="@+id/unTranslatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:text="Hello how are you?"
                android:layout_marginTop="4dp"
                app1:layout_constraintStart_toEndOf="@+id/tv_language_short"
                app1:layout_constraintEnd_toStartOf="@+id/btn_star"
                app1:layout_constraintTop_toTopOf="parent"
                app1:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/btn_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_empty_star"
                android:layout_gravity="end"
                app1:layout_constraintTop_toTopOf="parent"
                app1:layout_constraintBottom_toBottomOf="parent"
                app1:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="1dp"
            android:background="#7E7C7C" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="2dp"
            android:paddingBottom="2dp"
            >
            <TextView
                android:id="@+id/tv_language_short_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                app1:layout_constraintStart_toStartOf="parent"
                app1:layout_constraintTop_toTopOf="parent"
                app1:layout_constraintBottom_toBottomOf="parent"
                app:text="qr"
                />
            <TextView
                android:id="@+id/translatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:text="Assalawma aleykum qandaysÄ±z?"
                android:layout_marginTop="4dp"
                app1:layout_constraintStart_toEndOf="@+id/tv_language_short_second"
                app1:layout_constraintEnd_toStartOf="@+id/btn_star_second"
                app1:layout_constraintTop_toTopOf="parent"
                app1:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/btn_star_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:layout_gravity="end"
                app1:layout_constraintTop_toTopOf="parent"
                app1:layout_constraintBottom_toBottomOf="parent"
                app1:layout_constraintEnd_toEndOf="parent"
                android:visibility="invisible"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>